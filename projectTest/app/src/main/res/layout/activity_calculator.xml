<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="4">

    <TextView
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_rowWeight="5"
        android:layout_columnWeight="1"
        android:background="#FFCCCC"
        android:gravity="right|bottom"

        android:id="@+id/tv"
        android:textSize="50sp"  />

    <Button
        android:id="@+id/C"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="C" />

    <Button
        android:id="@+id/Del"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="Del" />

    <Button
        android:id="@+id/rem"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="%" />

    <Button
        android:id="@+id/divide"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="÷" />

    <Button
        android:id="@+id/seven"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="7"/>

    <Button
        android:id="@+id/eight"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="8"/>

    <Button
        android:id="@+id/nine"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="9"/>

    <Button
        android:id="@+id/multiply"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="×"/>

    <Button
        android:id="@+id/four"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="4"/>

    <Button
        android:id="@+id/five"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="5"/>

    <Button
        android:id="@+id/six"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="6"/>

    <Button
        android:id="@+id/minus"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="－"/>

    <Button
        android:id="@+id/one"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="1"/>

    <Button
        android:id="@+id/two"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:text="2"/>

    　　　<Button
    android:id="@+id/three"
    android:textSize="30sp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_gravity="fill"
    android:text="3"/>

    　　<Button
    android:id="@+id/add"
    android:textSize="30sp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_gravity="fill"
    android:text="＋"/>

    　　
    <Button
        android:id="@+id/change"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="+/-"/>

    　　<Button
    android:id="@+id/zero"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:textSize="30sp"
    android:layout_gravity="fill"
    android:text="0"/>

    <Button
        android:id="@+id/point"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight="1"
        android:text="."/>

    <Button
        android:id="@+id/equal"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight="1"
        android:text="="/>


</GridLayout>